<div id="content-header">
  <h1>Your Product</h1>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="span1"></div>
    <div class="span7 offset1">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-user"></i>
          </span>
          <h5><%= current_user.full_name %></h5>
        </div>
        <div class="widget-content">
          <% unless @product.image.blank? %>
            <div class="row row-size preview_page_padding">
              <div class="span2 offset1">
                <span class="preview_page_font">Product image</span>
              </div>
              <div class="span5 offset1">
                <%= image_tag(@product.image_url(:large)) if @product.image? %>
              </div>
            </div>
          <% end %>
          <div class="row row-size margin_from_top">
            <div class="span1 offset1" style="text-align:left">
              <span style="font-weight:bold">Title</span>
            </div>
            <div class="span4">
              <%= @product.title %>
            </div>
          </div>
          <div class="row row-size margin_from_top">
            <div class="span1 offset1" style="text-align:left">
              <span style="font-weight:bold">Content</span>
            </div>
            <div class="span4">
              <%= @product.description %>
            </div>
          </div>
          <div class="row row-size margin_from_top">
            <div class="span1 offset1" style="text-align:left; width: 100px;">
              <span style="font-weight:bold">Date and Time</span>
            </div>
            <div class="span4">
              <%= date_formate(@product.created_at) %>
            </div>
          </div>
          <div class="row row-size margin_from_top">
            <div class="span1 offset1" style="text-align:left; width: 100px;">
              <span style="font-weight:bold">Value</span>
            </div>
            <div class="span4">
              <%= @product.value %>
            </div>
          </div>
        </div>
        <div class='span8 offset2'>
          <%= link_to 'Update product', edit_user_product_path, :class => 'btn btn-primary' %>  
          <%= link_to 'Back', user_products_path, :class => 'btn btn-inverse' %>  
        </div>
      </div>
    </div>
    <div class="span3"></div>
  </div>
</div>
