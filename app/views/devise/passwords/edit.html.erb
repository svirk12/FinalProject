<div id="box_login">
  <div class="container">
    <div class="span12 box_wrapper">
      <div class="span12 box box_mandetory">
        <div>
          <div class="head">
            <h4>Change your password</h4>
          </div>
          
          <div class="form">
            <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <%= f.password_field :password, :autofocus => true, :placeholder => "New Password" %>
              <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password"  %>
              <%= f.submit "Change my password", :class=> "btn" %>
            <% end %>
          </div>                
        </div>
      </div>
      <p class="already">Don't have an account? <%= link_to('Sign up', new_customer_registration_path) %></p>
      <p class="already">Have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>
      <p class="already">Didn't receive confirmation instructions? <%= link_to "Resend it", new_confirmation_path(resource_name) %></p>
    </div>
  </div>
</div>


