<div id="box_login">
  <div class="container">
    <div class="span12 box_wrapper">
      <div class="span12 box box_mandetory">
        <% if resource.errors.any? %>
          <%= error_message(resource.errors.full_messages, 'alert-error')%>
        <% end %>
        <div>
          <div class="head">
            <h4>Create New Account</h4>
          </div>
          <div class="form">
            <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
              <%= f.text_field :first_name, :placeholder => "First Name" %>
              <%= f.text_field :last_name, :placeholder => "Last Name" %>
              <%= f.text_field :email, :placeholder => "Email" %>
              <%= f.password_field :password, :placeholder => "Password" %>
              <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %> 
              <div class="row">              
                <div class="span4" style="text-align:left;">                  
                  <%= f.check_box :terms_of_service %>
                    <p style='font-size:12px; margin: -17px 28px 6px;'>Terms and conditions</p>
                </div>
              </div>
              <%= f.submit "Sign up" , :class =>"btn" %>
            <% end %>
          </div>
        </div>
      </div>
      <p class="already">Already have an account? <%= link_to('Sign in', new_user_session_path) %></p>
    </div>
  </div>
</div>
